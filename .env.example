# Smart Crop Technologies - Environment Variables
# Copy this file to .env.local and update with your values

# ========================================
# Firebase Configuration
# ========================================
# Get these from Firebase Console > Project Settings > General > Your apps
# Create a web app if you haven't already

NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key-here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789012:web:abcdef123456

# ========================================
# API Configuration
# ========================================
# URL of your backend API
# Development: http://localhost:4000
# Production: https://api.yourdomain.com

NEXT_PUBLIC_API_URL=http://localhost:4000

# ========================================
# Map Configuration (Optional)
# ========================================
# Leave empty to use Leaflet with OpenStreetMap (free)
# Or get token from: https://account.mapbox.com/access-tokens/

NEXT_PUBLIC_MAPBOX_TOKEN=

# ========================================
# Authentication Mode
# ========================================
# Set to 'true' for mock authentication (development)
# Set to 'false' to use Firebase authentication (production)

NEXT_PUBLIC_MOCK_AUTH=true

# ========================================
# Analytics (Optional)
# ========================================
# Google Analytics Measurement ID
# Get from: https://analytics.google.com/

NEXT_PUBLIC_GA_ID=

# Sentry DSN for error tracking
# Get from: https://sentry.io/

NEXT_PUBLIC_SENTRY_DSN=

# ========================================
# Feature Flags (Optional)
# ========================================
# Enable/disable features in development

NEXT_PUBLIC_ENABLE_SENSOR_DATA=true
NEXT_PUBLIC_ENABLE_PDF_EXPORT=true
NEXT_PUBLIC_ENABLE_MAPS=true

# ========================================
# Notes
# ========================================
# - All NEXT_PUBLIC_* variables are exposed to the browser
# - Never commit .env.local to version control
# - For production, set these in your hosting provider (Vercel, etc.)
# - Mock auth is for development only - use Firebase in production
